<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/component_surface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/componentHeader"
        android:text="Header"
        android:textSize="20sp"
        android:textColor="@color/colorOnSurfaceHeader"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/componentText"
        android:text="preview text"
        android:textColor="@color/colorOnSurfaceText"
        android:textSize="20sp"
        android:lineSpacingExtra="2dp"/>

</LinearLayout>