<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.SoftSkills"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/full_gap">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/done_button"
        style="@style/Theme.SoftSkills.Button.FullContained"
        android:layout_width="wrap_content"
        android:text="Готово"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/failed_button"
        style="@style/Theme.SoftSkills.Button.FullContained"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/full_gap"
        android:text="Не сделал" />

</LinearLayout>